<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <springProfile name="local">
        <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
            <layout class="ch.qos.logback.classic.PatternLayout">
                <Pattern>[%d{yyyy-MM-dd HH:mm:ss}:%-3relative][%thread][%X{traceId}][%X{spanId}] %-5level %logger{36} - %msg%n</Pattern>
            </layout>
        </appender>

        <root level="INFO">
            <appender-ref ref="STDOUT"/>
        </root>
    </springProfile>

    <springProfile name="prod">
        <appender name="SERVER_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>./logs/gateway/info.log</file>
            <encoder>
                <pattern>[%d{yyyy-MM-dd HH:mm:ss}:%-3relative][%thread][%X{traceId}][%X{spanId}] %-5level %logger{35} - %msg%n
                </pattern>
            </encoder>
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <!-- 해당 패턴 네이밍으로 이전 파일이 기록됨 -->
                <fileNamePattern>./was-logs/gateway/info.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
                <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                    <maxFileSize>10MB</maxFileSize> <!-- 한 파일의 최대 용량 -->
                </timeBasedFileNamingAndTriggeringPolicy>
                <maxHistory>31</maxHistory> <!-- 한 파일의 최대 저장 기한 180일 -->
            </rollingPolicy>
        </appender>
        <logger name="org.springframework" level="INFO"/>
        <logger name="com.claon.gateway" level="INFO"/>
        <logger name="org.springframework.web.filter.CommonsRequestLoggingFilter" level="DEBUG"/>
        <root level="INFO">
            <appender-ref ref="SERVER_LOG"/>
        </root>
    </springProfile>
</configuration>